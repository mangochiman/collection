<h4 style="color:green"><%= flash[:notice]%></h4>
<table>
<% @hidden_photos.each do |photo|%>
<tr>
		<td rowspan="3"><%= image_tag(url_for({:action => "image",:id => photo}),:width => "40%",:height => "40%")%></td>
		<td><%= link_to"Restore",{:action => "activate_hidden_picture", :id => photo},:confirm => "Are you sure you want to restore this picture?" %></td>	
	</tr>
	<tr>
		<td><%= link_to"Remove",{:action => "remove_photo", :id => photo},:confirm => "Are you sure you want to delete this picture?" %></td>
	</tr>
	<tr>
		<td>Share</td>
	</tr>
	<tr>
	<td>---------------------------------------------------------------------------------------------------------</td></tr>
<% end %>
</table>
